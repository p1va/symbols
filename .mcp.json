{
  "mcpServers": {
    "symbols": {
      "command": "node",
      "args": [
        "dist/index.js",
        "--",
        "npx",
        "-y",
        "typescript-language-server",
        "--stdio"
      ],
      "env": { 
        "SYMBOLS_PRELOAD_FILES": "src/index.ts;",
        "SYMBOLS_DIAGNOSTICS_STRATEGY": "push"
      }
    }
  }
}
